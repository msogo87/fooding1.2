<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	app:cardBackgroundColor="@color/global_bg_front"
	app:cardCornerRadius="@dimen/card_corner_radius"
	app:cardElevation="@dimen/global_elevation_xxs">


	<RelativeLayout
		android:layout_width="match_parent"
		android:layout_height="match_parent">

        <TextView
            android:id="@+id/fragment_poi_list_item_title"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/fragment_poi_list_item_title_height"
            android:layout_alignParentLeft="true"
            android:paddingLeft="@dimen/global_spacing_xxs"
            android:paddingStart="@dimen/global_spacing_xxs"
            android:paddingTop="@dimen/global_spacing_xxs"
            android:fontFamily="sans-serif"
            android:ellipsize="end"
            android:maxLines="1"
            android:textSize="@dimen/global_text_size_headline"
            android:textColor="@color/colorPrimary"
            android:text="POI Name"
            ></TextView>

        <TextView
            android:id                      ="@+id/fragment_poi_list_distance_from_item"
            android:layout_width            ="wrap_content"
            android:layout_height           ="@dimen/fragment_poi_list_item_title_height"
            android:layout_alignParentRight ="true"
            android:paddingRight            ="@dimen/global_spacing_xxs"
            android:paddingEnd              ="@dimen/global_spacing_xxs"
            android:paddingTop              ="@dimen/global_spacing_xxs"
            android:fontFamily              ="sans-serif"
            android:text                    ="1.0km"
            android:textSize                ="@dimen/global_text_size_headline"
            android:textColor               ="@color/colorPrimary"
            android:drawableLeft            ="@drawable/ic_card_address"
            android:drawableStart           ="@drawable/ic_card_address"
            android:drawablePadding         ="@dimen/fragment_poi_list_recycler_item_icon_padding"
            ></TextView>

            <!--android:paddingTop    ="@dimen/global_spacing_xxs"-->
        <TextView
            android:id            ="@+id/fragment_poi_list_item_timer_text"
            android:layout_width  ="wrap_content"
            android:layout_height ="@dimen/fragment_poi_list_item_title_height"
            android:layout_below  ="@id/fragment_poi_list_item_title"
            android:paddingLeft   ="@dimen/global_spacing_xxs"
            android:paddingStart  ="@dimen/global_spacing_xxs"
            android:paddingTop    ="@dimen/global_spacing_xxs"
            android:fontFamily    ="sans-serif"
            android:ellipsize     ="end"
            android:maxLines      ="1"
            android:textSize      ="@dimen/global_text_size_subhead"
            android:textColor     ="@color/fragment_poi_list_item_discount_details_color"
            android:text          ="Time Left"
            ></TextView>

            <!--android:layout_alignRight="@id/fragment_poi_list_item_timer_text"-->
            <!--android:layout_alignEnd="@id/fragment_poi_list_item_timer_text"-->
        <TextView
            android:id                 ="@+id/fragment_poi_list_item_timer"
            android:layout_width       ="wrap_content"
            android:layout_height      ="@dimen/fragment_poi_list_item_title_height"
            android:layout_alignBottom ="@id/fragment_poi_list_item_timer_text"
            android:layout_toRightOf   ="@id/fragment_poi_list_item_timer_text"
            android:layout_toEndOf     ="@id/fragment_poi_list_item_timer_text"
            android:paddingLeft        ="@dimen/global_spacing_xxs"
            android:paddingStart       ="@dimen/global_spacing_xxs"
            android:paddingTop         ="@dimen/global_spacing_xxs"
            android:fontFamily         ="sans-serif"
            android:ellipsize          ="end"
            android:maxLines           ="1"
            android:textSize           ="@dimen/global_text_size_subhead"
            android:textColor          ="@color/fragment_poi_list_item_discount_details_color"
            android:text               ="01:00:00"
            ></TextView>

        <Button
            android:layout_width            ="wrap_content"
            android:layout_height           ="@dimen/fragment_poi_detail_info_save_deal_button"
            android:layout_alignParentRight ="true"
            android:layout_alignParentEnd   ="true"
            android:paddingRight            ="@dimen/global_spacing_xxs"
            android:paddingEnd              ="@dimen/global_spacing_xxs"
            android:layout_below            ="@+id/fragment_poi_list_distance_from_item"
            android:background              ="@color/cardview_light_background"
            android:text                    ="Save Deal!"
            android:textAllCaps             ="false"
            android:textSize                ="@dimen/global_text_size_subhead"
            android:textColor               ="@color/global_color_red_primary"
            />

    </RelativeLayout>
</android.support.v7.widget.CardView>